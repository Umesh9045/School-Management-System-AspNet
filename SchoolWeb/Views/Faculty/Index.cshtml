@using FacultyServices.Data.Models

@model List<Faculty>



@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>
                Name
            </th>
            <th>
                Profile Picture
            </th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.facultyId</td>
                <td>@item.name</td>
                <td><img src="/Images/FacultyProfilePic/@item.profilePicName" width="100" /></td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.facultyId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.facultyId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.facultyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
